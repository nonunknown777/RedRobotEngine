
{
    "configurations": [
        {
            "name": "(gdb) Launch + Compile",
            "cwd": "${workspaceFolder}",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/my_project",
            "preLaunchTask": "build",
            "setupCommands": [ { "text": "-enable-pretty-printing" } ]
        },
        {
            "name": "(gdb) Launch Only",
            "cwd": "${workspaceFolder}",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/my_project",
            "setupCommands": [ { "text": "-enable-pretty-printing" } ]
        },
        {
            "name": "C/C++: g++ build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/my_project",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        }
            
          
    ],
    "version": "4"
}